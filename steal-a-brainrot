local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PasteScriptGui"
screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

-- Create TextBox for code input
local textBox = Instance.new("TextBox")
textBox.Size = UDim2.new(0, 400, 0, 150)
textBox.Position = UDim2.new(0.5, -200, 0.5, -100)
textBox.Text = "-- Paste your Lua code here"
textBox.ClearTextOnFocus = false
textBox.MultiLine = true
textBox.Font = Enum.Font.Code
textBox.TextSize = 18
textBox.Parent = screenGui

-- Create Button to run code
local runButton = Instance.new("TextButton")
runButton.Size = UDim2.new(0, 120, 0, 40)
runButton.Position = UDim2.new(0.5, -60, 0.5, 60)
runButton.Text = "Run Script"
runButton.Font = Enum.Font.SourceSansBold
runButton.TextSize = 22
runButton.Parent = screenGui

-- Run code when button is clicked
runButton.MouseButton1Click:Connect(function()
    local code = textBox.Text
    local func, err = loadstring(code)
    if func then
        local success, runtimeErr = pcall(func)
        if not success then
            textBox.Text = "-- Error running code:\n" .. tostring(runtimeErr)
        end
    else
        textBox.Text = "-- Error compiling code:\n" .. tostring(err)
    end
end)
